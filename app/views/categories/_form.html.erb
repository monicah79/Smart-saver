<p style="color: green"><%= notice %></p>

<%= form_with(model: category, multipart: true) do |form| %>
  <div class="container">
    
    <% if category.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
  
        <ul>
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="sign-color">
      <div >
      <%= form.label :name, "Name" %>
        <%= form.text_field :name, id: "Name", placeholder: "Name", class: "form-control p-3 mb-3" %>
      </div>
  
      <div class="form-control p-3 mb-3">
      <% if category.icon.attached? %>
      <%= image_tag category.icon %>
    <% end %>
      <%= form.label :icon, id: "Icon", style: "display: block" %>
      <%= form.file_field :icon, class: "form-control", type: "file", id: "formFile" %>
    </div>
    
    </div>
  </div>
  
  <footer>
    <div class="action" >
    <p style="color: green"><%= alert %></p>
        <%= form.submit "Save", class: "btn btn-secondary fixed-bottom actions"%>
      </div>
    </footer>
  <% end %>
