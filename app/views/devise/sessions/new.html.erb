<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
  <nav class="header">
    
  <div>
  <%= link_to root_path, class: "back" do %>
    <i class="fa fa-angle-left" aria-hidden="true"></i>
  <% end %>
</div>
    <div>
      <p> REGISTER </p>
    </div>
    <div class="next">
        <%= f.submit "NEXT", class: "registration-button" %>
      </div>
  </nav>
  
    <div class="sign-color container">
      <div class="field form-div">
        <%= f.label :email %>
        <%= f.email_field :email,  id: "Email", autofocus: true, autocomplete: "email", required: true,  class: "form-input" %>
      </div>
  
      <div class="field form-div">
        <%= f.label :password %>
        <%= f.password_field :password,  id: "Password", autocomplete: "current-password",  class: "form-input" %>
      </div>
  
      <% if devise_mapping.rememberable? %>
        <div class="field form-div">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>
  
    <div class="registration-links">
      <div class="question">Don't have an account?</div><br />
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end %>
    </div>

   
  <% end %>